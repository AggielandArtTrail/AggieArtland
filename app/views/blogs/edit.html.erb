<h1>Edit Blog Post</h1>

<% if current_user.is_admin? %>
  <%= render 'form', blog: @blog_post %>
  <%= button_to 'Delete', blog_path(@blog_post), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
<% end %>

<%= link_to 'Back to Blog', blog_path(@blog_post), class: 'btn btn-back' %>
