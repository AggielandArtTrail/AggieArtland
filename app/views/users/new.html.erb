<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card p-4" style="background-color: #f5f5dc; font-family: 'HelveticaNeue','Helvetica Neue',Helvetica,Arial,sans-serif;">
    <h1 style="text-align: center;">Sign Up</h1>
    <p style="color: red; text-align: center;"><%= notice %></p>

    <%= form_for @user, url: users_path do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', style: 'width: 100%;' %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', style: 'width: 100%;' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', style: 'width: 100%;' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control', style: 'width: 100%; margin-bottom: 10px;' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit 'Sign Up', class: 'btn btn-primary rounded-pill', style: 'width: 100%; margin-top: 10px;' %>
      </div>
    <% end %>
  </div>
</div>
