<div class="container mt-4">
  <h4>User Details</h4>
  <div class="card p-3" style="background-color: #f5f5dc;">
    <div class="main-body">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="https://www.kindpng.com/picc/m/105-1055656_account-user-profile-avatar-avatar-user-profile-icon.png" alt="Account User Profile Avatar - Avatar User Profile Icon, HD Png" target="_blank" alt="User" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4><%= @user.name %></h4>
                  <p class="text-secondary mb-1">User Profile</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                <%= form_with model: @user, url: user_path, method: :patch do |form| %>
                    <div class="row">
                    <div class="col-sm-6">
                        <%= form.label :name, "Full Name" %>
                    </div>
                    <div class="col-sm-6 text-secondary text-sm-right">
                        <%= form.text_field :name, class: 'form-control' %>
                    </div>
                    </div>
                    <%= form.submit 'Update', class: 'btn btn-primary mt-3' %>
                <% end %>
                </div>


              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @user.email %>
                  
                </div>
              </div>
              <!-- Other user details -->
            </div>
          </div>

          

        </div>
      </div>
    </div>
  </div>
</div>
