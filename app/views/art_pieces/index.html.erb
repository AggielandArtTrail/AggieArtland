<h3> List of Art Pieces</h3>
<div id="art_pieces">
  <% @art_pieces.each do |art_piece| %>

    <% if art_piece.has_icon? %>
      <%= image_tag art_piece.icon_name, size: "100x100" %>
    <% else %>
      <%= image_tag "https://i.pinimg.com/originals/93/ae/51/93ae515eb75b21f3af334fd3888ee367.jpg", size: "100x100" %>
    <% end %>

    <%= render art_piece %>
    <p>
      <%= link_to "Show this art piece", art_piece %>
    </p>
  <% end %>
</div>
<br>

<%= link_to "New art piece", new_art_piece_path %>
