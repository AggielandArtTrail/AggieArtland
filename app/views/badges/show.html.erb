<p style="color: green"><%= notice %></p>
<div class="container mt-4">
  <%= render @badge %>
  
  <div>
    <div class = "row">
      <div class="row col-sm-6">
        <div class="col-sm-6">
          <%= link_to "Back to badges", badges_path,class: "btn btn-primary" %>
        </div>
      </div> 
      <% if current_user.is_admin? %>
        <div class="row col-sm-6">
          <div class="col-sm-6">
            <%= link_to "Edit this badge", edit_badge_path(@badge), id: "edit",class: "btn btn-primary" %>
          </div>
          <div class="col-sm-6">
            <%= button_to "Delete this badge", @badge, method: :delete, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>      

</div>

