<style>
  .image {
    float: left;
    padding-right: 20px;
  }
  .heading {
    font-size: 30px;
    font-style: bold;
  }
</style>

<div id="<%= dom_id badge %>"  class="main-body">
  <div class="row gutters-gx">
    <div class="card m-3 p-3">
      <div class = "card-body">

        <div class="col-4 mb-3 position-relative">
          <div class="position-relative" style="width: 100pt; height: 100pt; overflow: hidden;">
            <%= image_tag badge.get_icon, class: "img-fluid", style: "max-width: 100%; height: auto; max-height: 100%;" %>
          </div>
        </div>

        <div class = "heading">
          <p><%= badge.name %></p>    
        </div>
        <div>
          <div class="row mb-3">
            <div class="col-sm-2">
            <h6 class="mb-0">Description:</h6>
            </div>
            <div class="col-sm-10 text-secondary">
              <%= badge.description %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-2">
            <h6 class="mb-0">Progress:</h6>
            </div>
            <div class="col-sm-10 text-secondary">
              <%= badge.get_progress(current_user) %>
            </div>
          </div>

          <% if current_user.is_admin? %>
            <div class="row mb-3">
              <div class="col-sm-2">
              <h6 class="mb-0">Type:</h6>
              </div>
              <div class="col-sm-10 text-secondary">
                <%= badge.badge_type %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-2">
              <h6 class="mb-0">Requirement:</h6>
              </div>
              <div class="col-sm-10 text-secondary">
                <%= badge.requirement %>
              </div>
            </div>          
          <%end%> 
        </div>
      </div>
    </div>
  </div>
</div>
