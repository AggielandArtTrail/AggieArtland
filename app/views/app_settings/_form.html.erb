<%= form_with(model: app_settings) do |form| %>
  <% if app_settings.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(app_settings.errors.count, "error") %> prohibited this app_settings from being saved:</h2>

      <ul>
        <% app_settings.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Default Stamp Icon", style: "display: block" %>
    <br>
    <%= image_tag AppSettings.instance.get_default_stamp_icon, size: "100x100" %>
    <br><br>
    <%= form.file_field :default_stamp_icon %>
  </div>

  <br><br><br>

  <div>
    <%= form.label "Default Badge Icon", style: "display: block" %>
    <br>
    <%= image_tag AppSettings.instance.get_default_badge_icon, size: "100x100" %>
    <br><br>
    <%= form.file_field :default_badge_icon %>
  </div>

  <br><br><br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
