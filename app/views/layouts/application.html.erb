<!DOCTYPE html>
<html>
  <head>
    <title>AggieArtland</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if logged_in? %>
      Welcome, <%= current_user.email %>! <%= link_to 'Map', "/map" %> <%= link_to 'Art Pieces', "/art_pieces" %>  <%= link_to 'Profile', show_user_path(current_user) %> <%= link_to 'Logout', logout_path %>
    <% else %>
      <%= link_to 'Login', login_path %> | <%= link_to 'Sign up', signup_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
